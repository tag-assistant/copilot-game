{
  "name": "copilot-game",
  "displayName": "Copilot Game - Agent Visualizer",
  "description": "Watch Copilot work as a pixel art adventure! Mona the cat-topus visualizes what Copilot agent mode is doing â€” reading files, writing code, running commands, and fighting bugs.",
  "version": "0.3.0",
  "publisher": "tag-assistant",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Visualization"],
  "keywords": ["copilot", "agent", "visualizer", "game", "pixel-art", "mona", "coding-companion", "gamification"],
  "repository": {
    "type": "git",
    "url": "https://github.com/tag-assistant/copilot-game"
  },
  "icon": "icon.png",
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotGame.open",
        "title": "Open Copilot Game",
        "category": "Copilot Game",
        "icon": "$(smiley)"
      }
    ],
    "keybindings": [
      {
        "command": "copilotGame.open",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "configuration": {
      "title": "Copilot Game",
      "properties": {
        "copilotGame.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open the game panel when VS Code starts"
        },
        "copilotGame.soundEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable retro sound effects"
        },
        "copilotGame.monaSize": {
          "type": "number",
          "default": 64,
          "enum": [48, 64, 96],
          "description": "Mona sprite size in pixels"
        },
        "copilotGame.showXPBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the XP progress bar at the top"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && esbuild src/webview/index.ts --bundle --outfile=dist/webview.js --format=iife --platform=browser",
    "watch": "npm run build -- --watch",
    "package": "npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
