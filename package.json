{
  "name": "copilot-game",
  "displayName": "Copilot Game - Mona's Adventure",
  "description": "Watch Mona the cat react to your coding in a pixel art game world",
  "version": "0.1.0",
  "publisher": "tag-assistant",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotGame.open",
        "title": "Open Copilot Game",
        "category": "Copilot Game"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && esbuild src/webview/index.ts --bundle --outfile=dist/webview.js --format=iife --platform=browser",
    "watch": "npm run build -- --watch",
    "package": "npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
